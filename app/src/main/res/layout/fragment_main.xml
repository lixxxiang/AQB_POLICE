<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/mainview"
    tools:context="com.cgwx.yyfwptz.lixiang.aqb_police.MainActivity">


    <!--<view-->
        <!--android:layout_width="297dp"-->
        <!--android:layout_height="309dp"-->
        <!--android:layout_above="@+id/button"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="21dp">-->
        <!--<include layout="@layout/appear"></include>-->
    <!--</view>-->
    <include layout="@layout/appear"
        android:id="@+id/appear"
        android:visibility="invisible"
        android:layout_marginBottom="21dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/outPolice"
        android:layout_centerHorizontal="true">

    </include>

    <include layout="@layout/done"
        android:id="@+id/done"
        android:visibility="invisible"
        android:layout_marginBottom="13dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/outPolice"
        android:layout_centerHorizontal="true">

    </include>

    <Button
        android:id="@+id/outPolice"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="出警"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="448dp"
        android:background="@drawable/chujing"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp" />

    <Button
        android:id="@+id/lisPolice"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:visibility="invisible"
        android:text="听警中"
        android:textColor="#ff9801"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="448dp"
        android:background="@drawable/listen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp" />

    <Button
        android:id="@+id/quit"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="收工"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="#5f5f5f"
        android:textSize="12dp"
        android:background="@drawable/shougong"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_alignBaseline="@+id/outPolice"
        android:layout_alignBottom="@+id/outPolice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
